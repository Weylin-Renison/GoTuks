<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame">

    <TextView
        android:id="@+id/txtvISSRouteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textColor="@android:color/secondary_text_light"
        android:text="Hatfield-Groenkloof"/>

    <TextView
        android:id="@+id/txtvISSTripTimes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtvISSRouteName"
        android:layout_marginLeft="50dp"
        android:textSize="14sp"
        android:textColor="@android:color/secondary_text_light"
        android:text="Stop Names\n06:20 - 18:20 Hourly"/>

    <Button
        android:id="@+id/btnISSRouteColor"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtvISSRouteName"
        android:layout_alignBottom="@id/txtvISSTripTimes"
        android:enabled="false"
        android:backgroundTint="@android:color/holo_green_light"/>

    <ImageView
        android:id="@+id/imgvISSStopIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:padding="1dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/btnISSRouteColor"
        android:layout_below="@id/txtvISSRouteName"
        android:src="@drawable/ic_stop"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:padding="1dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/btnISSRouteColor"
        android:layout_below="@id/imgvISSStopIcon"
        android:src="@drawable/ic_time"/>

</RelativeLayout>