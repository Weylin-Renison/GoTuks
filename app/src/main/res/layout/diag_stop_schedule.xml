<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linLayDFSSHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/DFABgBlue">

        <com.gometro.gotuks.AutoResizeTextView
            android:id="@+id/txtvDFSSHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="5dp"
            android:maxLines="1"
            android:text="IT Building"
            android:textColor="@color/FSBrightWhite"/>

        <CheckBox
            android:id="@+id/cbDFSSFav"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:button="@drawable/selector_checkbox_fav_white"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lstvDFSSchedule"
        android:layout_below="@id/linLayDFSSHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>